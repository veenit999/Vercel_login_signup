                    <input type="text" placeholder="Username" name="Username" class="login__input" /><i class="ri-mail-fill"></i>
                    <br/>
                    <!-- <i class="ri-mail-fill"></i>   <i class="ri-lock-2-fill"></i> -->
                </div>
                <div class="login__box">
                     <input type="password" name="Password" placeholder="Password" class="login__input" /> <i class="ri-lock-2-fill"></i>
                  <br/>
                </div>
                
                <!-- login__button -->
                <button type="submit" class="logout">Submit</button>
            </div>
        </form>
    </div>
